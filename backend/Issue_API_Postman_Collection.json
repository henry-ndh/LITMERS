	"item": [
		{
			"name": "Issue Status Management",
			"item": [
				{
					"name": "Create Issue Status",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"To Do\",\n  \"color\": \"#3B82F6\",\n  \"position\": 0,\n  \"isDefault\": false,\n  \"wipLimit\": null\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/issue/status?projectId={{projectId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "issue", "status"],
							"query": [
								{
									"key": "projectId",
									"value": "{{projectId}}"
								}
							]
						},
						"description": "Create a new issue status (Kanban column) for a project.\n\nRequired:\n- name: Status name (max 30 characters)\n- position: Column position (0-based)\n\nOptional:\n- color: Hex color code (e.g., #3B82F6)\n- isDefault: Set as default status\n- wipLimit: Work in progress limit (null = unlimited)"
					},
					"response": []
				},
				{
					"name": "Update Issue Status",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"In Progress\",\n  \"color\": \"#F59E0B\",\n  \"position\": 1,\n  \"isDefault\": false,\n  \"wipLimit\": 5\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/issue/status/{{statusId}}?projectId={{projectId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "issue", "status", "{{statusId}}"],
							"query": [
								{
									"key": "projectId",
									"value": "{{projectId}}"
								}
							]
						},
						"description": "Update an issue status. User must have access to the project."
					},
					"response": []
				},
				{
					"name": "Delete Issue Status",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/issue/status/{{statusId}}?projectId={{projectId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "issue", "status", "{{statusId}}"],
							"query": [
								{
									"key": "projectId",
									"value": "{{projectId}}"
								}
							]
						},
						"description": "Delete an issue status. Cannot delete if status has issues."
					},
					"response": []
				},
				{
					"name": "Get Issue Status By ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/issue/status/{{statusId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "issue", "status", "{{statusId}}"]
