							"raw": "{{baseUrl}}/api/issue/status/project/{{projectId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "issue", "status", "project", "{{projectId}}"]
						},
						"description": "Get all issue statuses (Kanban columns) for a project, ordered by position."
					},
					"response": []
