{
	"info": {
		"_postman_id": "team-api-collection",
		"name": "Team & Collaboration API",
		"description": "API endpoints for Team Management, Members, Invites, and Activity Logs",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{access_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5000",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "your_jwt_token_here",
			"type": "string"
		},
		{
			"key": "teamId",
			"value": "1",
			"type": "string"
		},
		{
			"key": "memberId",
			"value": "1",
			"type": "string"
		},
		{
			"key": "inviteId",
			"value": "1",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Team Management",
			"item": [
				{
					"name": "Create Team",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"My Team\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/team",
							"host": ["{{baseUrl}}"],
							"path": ["api", "team"]
						},
						"description": "Create a new team. The creator automatically becomes the OWNER."
					},
					"response": []
				},
				{
					"name": "Update Team",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Updated Team Name\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/team/{{teamId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "team", "{{teamId}}"]
						},
						"description": "Update team information. Only OWNER or ADMIN can update."
					},
					"response": []
				},
				{
					"name": "Delete Team",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/team/{{teamId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "team", "{{teamId}}"]
						},
						"description": "Soft delete a team. Only OWNER can delete."
					},
					"response": []
				},
				{
					"name": "Get Team By ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/team/{{teamId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "team", "{{teamId}}"]
						},
						"description": "Get team information by ID. User must be a member."
					},
					"response": []
				},
				{
					"name": "Get My Teams",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/team/my-teams",
							"host": ["{{baseUrl}}"],
							"path": ["api", "team", "my-teams"]
						},
						"description": "Get all teams that the current user is a member of."
					},
					"response": []
				},
				{
					"name": "Get Team Detail",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/team/{{teamId}}/detail",
							"host": ["{{baseUrl}}"],
							"path": ["api", "team", "{{teamId}}", "detail"]
						},
						"description": "Get team details including members and pending invites."
					},
					"response": []
				}
			],
			"description": "Endpoints for team CRUD operations"
		},
		{
			"name": "Team Members",
			"item": [
				{
					"name": "Get Team Members",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/team/{{teamId}}/members",
							"host": ["{{baseUrl}}"],
							"path": ["api", "team", "{{teamId}}", "members"]
						},
						"description": "Get all members of a team."
					},
					"response": []
				},
				{
					"name": "Remove Member",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/team/{{teamId}}/members/{{memberId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "team", "{{teamId}}", "members", "{{memberId}}"]
						},
						"description": "Remove a member from the team. ADMIN can remove MEMBER, OWNER can remove anyone. Users can remove themselves."
					},
					"response": []
				},
				{
					"name": "Update Member Role",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"role\": 1\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/team/{{teamId}}/members/{{memberId}}/role",
							"host": ["{{baseUrl}}"],
							"path": ["api", "team", "{{teamId}}", "members", "{{memberId}}", "role"]
						},
						"description": "Update a member's role. Only OWNER or ADMIN can change roles.\n\nRole values:\n- 0: OWNER\n- 1: ADMIN\n- 2: MEMBER"
					},
					"response": []
				},
				{
					"name": "Leave Team",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/team/{{teamId}}/leave",
							"host": ["{{baseUrl}}"],
							"path": ["api", "team", "{{teamId}}", "leave"]
						},
						"description": "Leave a team (remove yourself)."
					},
					"response": []
				}
			],
			"description": "Endpoints for managing team members"
		},
		{
			"name": "Team Invites",
			"item": [
				{
					"name": "Invite Member",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user@example.com\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/team/{{teamId}}/invite",
							"host": ["{{baseUrl}}"],
							"path": ["api", "team", "{{teamId}}", "invite"]
						},
						"description": "Invite a new member to the team by email. Only OWNER or ADMIN can invite.\n\nAn email will be sent with invitation link."
					},
					"response": []
				},
				{
					"name": "Accept Invite",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"your-invite-token-here\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/team/accept-invite",
							"host": ["{{baseUrl}}"],
							"path": ["api", "team", "accept-invite"]
						},
						"description": "Accept a team invitation using the token from the invitation email."
					},
					"response": []
				},
				{
					"name": "Cancel Invite",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/team/{{teamId}}/invites/{{inviteId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "team", "{{teamId}}", "invites", "{{inviteId}}"]
						},
						"description": "Cancel a pending invitation. Only OWNER or ADMIN can cancel."
					},
					"response": []
				},
				{
					"name": "Get My Invites",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/team/my-invites",
							"host": ["{{baseUrl}}"],
							"path": ["api", "team", "my-invites"]
						},
						"description": "Get all pending invitations for the current user's email."
					},
					"response": []
				}
			],
			"description": "Endpoints for managing team invitations"
		},
		{
			"name": "Activity Logs",
			"item": [
				{
					"name": "Get Activity Logs",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/team/{{teamId}}/activity-logs?limit=50",
							"host": ["{{baseUrl}}"],
							"path": ["api", "team", "{{teamId}}", "activity-logs"],
							"query": [
								{
									"key": "limit",
									"value": "50",
									"description": "Number of logs to return (default: 50)"
								}
							]
						},
						"description": "Get activity logs for a team. Shows recent team activities like member joins, role changes, etc."
					},
					"response": []
				}
			],
			"description": "Endpoints for viewing team activity history"
		},
		{
			"name": "Auth",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Automatically save access token to collection variable",
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.accessToken) {",
									"    pm.collectionVariables.set(\"access_token\", jsonData.data.accessToken);",
									"    console.log(\"Access token saved:\", jsonData.data.accessToken);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@gmail.com\",\n  \"password\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "login"]
						},
						"description": "Login to get access token. Token will be automatically saved to collection variables.\n\nDefault users:\n- Admin: admin@gmail.com / 123456\n- User: user@gmail.com / 123456"
					},
					"response": []
				}
			],
			"description": "Authentication endpoints (for testing purposes)"
		}
	]
}
